{
  "name": "dobutsu-admin",
  "version": "0.0.1",
  "description": "A basic order and inventory management system.",
  "author": "Alex Nicolaou",
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "node scripts/install-biome-cli.cjs",
    "dev": "vite dev",
    "dev:local": "vite dev --mode emulator",
    "dev:staging": "vite dev --mode staging",
    "dev:production": "vite dev --mode production",
    "env:local": "node scripts/switch-env.js local",
    "env:staging": "node scripts/switch-env.js staging",
    "env:production": "node scripts/switch-env.js production",
    "firebase:convert": "node scripts/firebase-config-to-env.js",
    "firebase:convert:staging": "node scripts/firebase-config-to-env.js --env staging --output .env.staging",
    "firebase:convert:production": "node scripts/firebase-config-to-env.js --env production --output .env.production",
    "emulators": "firebase emulators:start",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "emulators:import": "firebase emulators:start --import=./emulator-data",
    "build": "vite build",
    "build:local": "vite build --mode emulator",
    "build:staging": "vite build --mode staging",
    "build:production": "vite build --mode production",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "test:e2e": "bash e2e/run-tests.sh",
    "test:e2e:simple": "bash e2e/run-tests-simple.sh",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:report": "npx playwright show-report e2e/reports/html",
    "format": "biome format --write src tests",
    "lint": "biome check src tests",
    "lint:fix": "biome check --apply src tests",
    "ci": "biome ci src tests",
    "data:export": "node scripts/transfer-data.js",
    "data:import": "node scripts/transfer-data.js",
    "data:transfer": "node scripts/transfer-data.js"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "^1.56.1",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.20.4",
    "@sveltejs/package": "^2.0.0",
    "@vitest/coverage-v8": "^0.34.6",
    "publint": "^0.1.9",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "vitest": "^0.34.0"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@firebase/auth": "^1.3.2",
    "@google-cloud/firestore": "^7.11.6",
    "@json2csv/plainjs": "^7.0.3",
    "@ourway/svelte-firebase-auth": "^0.0.1",
    "@reduxjs/toolkit": "^1.9.7",
    "@sveltejs/adapter-static": "^2.0.3",
    "@zxing/library": "^0.20.0",
    "common-substrings": "^3.0.1",
    "firebase": "^10.5.2",
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^13.23.0"
  },
  "trustedDependencies": [
    "protobufjs"
  ],
  "main": "svelte.config.js",
  "directories": {
    "test": "tests"
  },
  "keywords": []
}
