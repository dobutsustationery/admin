{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
      	"noUnusedTemplateLiteral": "off"
			},
      "suspicious": {
      	"noExplicitAny": "off"
			},
			"performance": {
				"noDelete": "off"
			}
    }
  },
  "overrides": [
    {
      "includes": ["**/*.svelte"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ]
}
